{
  "manifest_version": 3,
  "name": "Arca ‚Äî your internet artifact collection",
  "description": "This is a browser extension that allows you to save tweets / ùïè posts to your Arca collection.",
  "version": "0.12",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "commands",
    "activeTab",
    "tabs",
    "contextMenus",
    "cookies"
  ],
  "externally_connectable": {
    "matches": ["http://localhost:3000/*"]
  },
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["https://twitter.com/*", "https://x.com/*", "http://localhost:3000/*"],
    "js": ["content.js"]
  }],
  "commands": {
    "save-tweet": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Save current tweet"
    }
  }
}